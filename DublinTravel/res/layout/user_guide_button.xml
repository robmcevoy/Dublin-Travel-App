<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
   		android:id="@+id/themeToggle"
  		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="0.1"
		android:src="@drawable/theme_change"
		android:background="@drawable/rounded_corner_orange"
		android:contentDescription="@string/change_theme_cd"
		android:layout_gravity="left"/>
	
    <LinearLayout 
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="0.8">
    </LinearLayout>

   	<ImageView
   		android:id="@+id/userManual"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="0.1"
  		android:src="@drawable/ic_action_help"
     	android:background="@drawable/rounded_corner_orange"
     	android:contentDescription="@string/user_guide_cd"/>    
</LinearLayout>
